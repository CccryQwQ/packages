<% @meta_title = "Critical Open Source #{@registry.try(:ecosystem).try(:humanize)} Packages" %>
<% @meta_description = "Find key open source #{@registry.try(:ecosystem)} software packages that are crucial to most projects, representing 80% of all downloads in their ecosystems." %>

<div class="container-sm">
  <h1 class='mb-3'>
    Critical Open Source <%= @registry.try(:ecosystem).try(:humanize) %> Packages
  </h1>

  <p class='lead'>
    Find key open source <%= @registry.try(:ecosystem) %> software packages that are crucial to most projects, representing 80% of all downloads in their ecosystems.
  </p>

  <ul class="nav nav-tabs my-3">
    <%= render 'packages/sort' %>
  </ul>

  <div class="row">
    <div class="col-lg-9">
      <%= render @packages %>
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages && @pagy.pages > 1 %>  
    </div>
    <div class="col">
      <div class="card mb-3">
        <div class="card-header">
          Filter by Registry
        </div>
        <div class="list-group list-group-flush">
          <% @registries.each do |registry,count| %>
            <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center <%= 'active' if params[:registry] == registry.name %>" href="<%= url_for(registry: (params[:registry] == registry.name ? nil :registry.name), page: nil) %>">
              <%= registry %>
              <span class="badge bg-primary rounded-pill"><%= number_with_delimiter count%></span>
            </a>
          <% end %>
        </div>
      </div>
    
      <% if @funding.any? %>
        <div class="card mb-3">
          <div class="card-header">
            Funding Platforms
          </div>
          <div class="list-group list-group-flush">
            <% @funding.each do |domain,count| %>
              <span class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <%= domain %>
                <span class="badge bg-primary rounded-pill"><%= number_with_delimiter count%></span>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>