<% @meta_title = "#{params[:id]} registries" %>

<div class="container-sm">
  <h1 class='mb-3'>
    <%= params[:id]%> registries
  </h1>

  <h4 class='mb-3'>Total packages indexed: <%= number_with_delimiter @registries.sum(&:packages_count) %> - Unique packages: <%= number_with_delimiter Package.ecosystem(params[:id]).distinct.count(:name) %></h4>
  
  <%= render @registries %>
</div>