<% @meta_title = "#{@package.name} dependent packages | #{@registry.name}" %>
<div class="container-sm">

  <%= render 'details' %>

  <%= render 'tabs' %>

  <% if @dependent_packages.any? %>
    <div class='row'>
      <div class='col-md-9'>
        <%= render @dependent_packages %>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages && @pagy.pages > 1 %>  
      </div>
      <div class='col-md-3'>
        <div class='card'>
          <div class='card-header'>
            Filter by kind
          </div>
          <div class='list-group list-group-flush'>
            <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center <%= 'active' if params[:kind].blank? %>" href="<%= dependent_packages_registry_package_path(@registry, @package, latest: params[:latest]) %>">
              All kinds
            </a>
            <% @kinds.each do |kind, count| %>
              <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center <%= 'active' if params[:kind] == kind %>" href="<%= dependent_packages_registry_package_path(@registry, @package, kind: kind, latest: params[:latest]) %>">
                <%= kind %>
                <span class='badge bg-primary rounded-pill'><%= number_with_delimiter count %></span>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      No dependent packages found.
    </div>
  <% end %>
</div>

